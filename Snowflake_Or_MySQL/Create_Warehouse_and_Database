--creating warehouse
CREATE WAREHOUSE DEMO_WAREHOUSE WITH WAREHOUSE_SIZE = 'LARGE'
WAREHOUSE_TYPE = 'STANDARD'
AUTO_SUSPEND = 600 -- IN SECONDS
AUTO_RESUME = TRUE
COMMENT = 'DEMO WAREHOUSE FOR LEARNING';

-- command to use the warehouse
use warehouse DEMO_WAREHOUSE;

-- creating database
CREATE DATABASE DEMO_DATABASE 
COMMENT = 'DEMO DATABASE FOR LEARNING';

-- command to use database
use database DEMO_DATABASE;
